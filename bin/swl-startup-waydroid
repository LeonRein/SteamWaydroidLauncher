#!/bin/bash

# Prevent running as root
if [ "$(id -u)" -eq 0 ]; then
    echo "ERROR: Do not run this script as root. Please run as a regular user." | tee -a "$LOGFILE"
    exit 1
fi

source /usr/lib/swl/setup-logging.sh

echo "[$(date)] Starting Waydroid startup script..." | tee -a "$LOGFILE"

sudo bash -c "/usr/lib/swl/start-waydroid-container 2>&1" | tee -a "$LOGFILE"

# Start the Waydroid session if not already running
if ! pgrep -f "waydroid session start" > /dev/null; then
    /usr/bin/waydroid session start & echo "[$(date)] Started waydroid session." | tee -a "$LOGFILE"
    sleep 1
else
    echo "[$(date)] Waydroid session already running." | tee -a "$LOGFILE"
fi

# Set kernel.pid_max using a separate script (optional, requires sudoers config)
sudo bash -c "/usr/lib/swl/set-maxpid 2>&1" | tee -a "$LOGFILE"

sudo bash -c "/usr/lib/swl/wait-for-boot 2>&1" | tee -a "$LOGFILE"

echo "[$(date)] Waydroid boot completed." | tee -a "$LOGFILE"